{
    "name": "Codepad",
    "id": "codepad",
    "packaging_format": 1,
    "description": {
        "en": "A cool code notepad.",
        "fr": "Un bloc-notes de code cool."
    },
    "version": "1.0~ynh1",
    "url": "https://github.com/Stylix58/codepad",
    "upstream": {
        "license": "free",
        "website": "https://github.com/Stylix58/codepad",
        "demo": "",
        "admindoc": "https://yunohost.org/packaging_apps",
        "userdoc": "https://yunohost.org/apps",
        "code": "https://github.com/Stylix58/codepad"
    },
    "license": "MIT",
    "maintainer": {
        "name": "Stylix58",
        "email": "lateman-jpeg@outlook.fr"
    },
    "requirements": {
        "yunohost": ">= 4.1.3"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/codepad",
                "default": "/codepad"
            },
            {
                "name": "admin",
                "type": "user",
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
}
